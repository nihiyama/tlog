{
  "name": "vscode-tlog",
  "displayName": "TLog",
  "publisher": "nihiyama",
  "version": "0.1.29",
  "private": true,
  "description": "tlog VS Code extension",
  "icon": "media/icon.png",
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/tlog-dev/tlog.git"
  },
  "type": "module",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Testing"
  ],
  "main": "./dist/extension.cjs",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tlog",
          "title": "TLog",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "tlog": [
        {
          "id": "tlog.controls",
          "name": "Controls",
          "type": "webview"
        },
        {
          "id": "tlog.tree",
          "name": "Suites"
        }
      ]
    },
    "commands": [
      {
        "command": "tlog.selectRoot",
        "title": "TLog: Set Root",
        "icon": {
          "light": "media/sidebar-icon.svg",
          "dark": "media/sidebar-icon.svg"
        }
      },
      {
        "command": "tlog.searchTags",
        "title": "TLog: Search Tags",
        "icon": {
          "light": "media/sidebar-icon.svg",
          "dark": "media/sidebar-icon.svg"
        }
      },
      {
        "command": "tlog.searchOwners",
        "title": "TLog: Search Owners",
        "icon": {
          "light": "media/sidebar-icon.svg",
          "dark": "media/sidebar-icon.svg"
        }
      },
      {
        "command": "tlog.clearSearch",
        "title": "TLog: Clear Search",
        "icon": {
          "light": "media/sidebar-icon.svg",
          "dark": "media/sidebar-icon.svg"
        }
      },
      {
        "command": "tlog.openManager",
        "title": "TLog: Open Manager",
        "icon": {
          "light": "media/sidebar-icon.svg",
          "dark": "media/sidebar-icon.svg"
        }
      },
      {
        "command": "tlog.refreshTree",
        "title": "TLog: Refresh Tree",
        "icon": {
          "light": "media/sidebar-icon.svg",
          "dark": "media/sidebar-icon.svg"
        }
      },
      {
        "command": "tlog.createSuite",
        "title": "Create Suite",
        "icon": {
          "light": "media/new-folder.svg",
          "dark": "media/new-folder.svg"
        }
      },
      {
        "command": "tlog.createCase",
        "title": "Create Case",
        "icon": {
          "light": "media/new-file.svg",
          "dark": "media/new-file.svg"
        }
      },
      {
        "command": "tlog.filterCases",
        "title": "TLog: Filter Cases"
      },
      {
        "command": "tlog.showSuiteStats",
        "title": "TLog: Show Suite Statistics"
      },
      {
        "command": "tlog.openRelated",
        "title": "TLog: Open Related"
      },
      {
        "command": "tlog.openRawYaml",
        "title": "Open YAML"
      },
      {
        "command": "tlog.deleteNode",
        "title": "Delete"
      }
    ],
    "configuration": [
      {
        "title": "TLog",
        "properties": {
          "tlog.scopeMode": {
            "type": "string",
            "enum": [
              "recursive",
              "currentOnly"
            ],
            "default": "recursive",
            "description": "Controls whether suite operations include descendant suites."
          }
        }
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "tlog.createSuite",
          "when": "view == tlog.tree && viewItem == suite",
          "group": "inline@1"
        },
        {
          "command": "tlog.createCase",
          "when": "view == tlog.tree && viewItem == suite",
          "group": "inline@2"
        },
        {
          "command": "tlog.openManager",
          "when": "view == tlog.tree && (viewItem == suite || viewItem == case)",
          "group": "navigation@1"
        },
        {
          "command": "tlog.openRawYaml",
          "when": "view == tlog.tree && (viewItem == suite || viewItem == case)",
          "group": "navigation@2"
        },
        {
          "command": "tlog.deleteNode",
          "when": "view == tlog.tree && (viewItem == suite || viewItem == case)",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --platform=node --format=cjs --outfile=dist/extension.cjs --external:vscode",
    "watch": "tsc -p tsconfig.json -w --preserveWatchOutput",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --coverage.reporter=lcov --coverage.reporter=text",
    "package:vsix": "vsce package --no-dependencies",
    "publish:marketplace": "vsce publish --no-dependencies",
    "publish:precheck": "npm run typecheck && npm run test && npm run package:vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.27.3"
  },
  "dependencies": {
    "@tlog/shared": "0.1.0"
  }
}
